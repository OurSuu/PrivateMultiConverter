# ============================================
# Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# Server Port
PORT=3001

# Node Environment (development | production)
NODE_ENV=development

# API Key for authentication
# All API requests must include this key in the x-api-key header
# Leave empty in development to disable authentication
API_KEY=your-secret-api-key-change-me

# Temporary directory for file processing
TEMP_DIR=./temp

# Maximum file upload size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600

# Cleanup interval in minutes (removes old temp files)
CLEANUP_INTERVAL_MINUTES=30

# CORS Origin - Frontend URL(s)
# For multiple origins, use comma-separated values:
# CORS_ORIGIN=http://localhost:5173,https://myapp.vercel.app
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX=100

# Conversion Settings (optional)
IMAGE_QUALITY=85
AUDIO_BITRATE=192k

# YouTube Settings (optional)
# Maximum video duration in seconds (default: 2 hours)
YOUTUBE_MAX_DURATION=7200
YOUTUBE_DEFAULT_QUALITY=best
